# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dealership_automation
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/dealership_automation_test

# Redis Configuration (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development  # development, staging, production

# Browser Automation Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Rate Limiting
DEFAULT_DELAY_BETWEEN_REQUESTS=2.0
MAX_CONCURRENT_BROWSERS=3
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/automation.log

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RECAPTCHA_SOLVER_API_KEY=your-captcha-solver-key

# Monitoring
PROMETHEUS_PORT=8000
ENABLE_METRICS=true

# Feature Flags
ENABLE_FORM_DISCOVERY=true
ENABLE_AUTO_MAPPING=true
ENABLE_SCREENSHOT_CAPTURE=true
ENABLE_COMPLIANCE_CHECK=true